[flake8]
# Set max line length to 88 to match Black's default
max-line-length = 88

# E203: whitespace before ':' (conflicts with Black)
# W503: line break before binary operator (conflicts with Black)
extend-ignore = E203, W503

# Exclude common directories
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .eggs,
    *.egg,
    migrations,
    staticfiles,
    frontend_build,
    node_modules

per-file-ignores =
    backend/apps/chat/urls.py:E501
    backend/core/settings_ci.py:F405
